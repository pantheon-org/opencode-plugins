{
  "executors": {
    "dev-proxy": {
      "implementation": "./dev-proxy/executor",
      "schema": "./dev-proxy/schema.json",
      "description": "Run opencode with local plugin symlinks and watchers",
      "readme": "./dev-proxy/README.md"
    },
    "typecheck": {
      "implementation": "./typecheck/executor",
      "schema": "./typecheck/schema.json",
      "description": "Run workspace TypeScript typecheck (tsc --noEmit)",
      "readme": "./typecheck/README.md"
    },
    "check-mirror-exists": {
      "implementation": "./check-mirror-exists/executor",
      "schema": "./check-mirror-exists/schema.json",
      "description": "Check if the mirror repository specified in package.json exists on GitHub"
    },
    "validate-jsdoc": {
      "implementation": "./validate-jsdoc/executor",
      "schema": "./validate-jsdoc/schema.json",
      "description": "Validates JSDoc presence on exported functions and classes"
    },
    "validate-markdown": {
      "implementation": "./validate-markdown/executor",
      "schema": "./validate-markdown/schema.json",
      "description": "Validates markdown files using markdownlint-cli2"
    }
  }
}
