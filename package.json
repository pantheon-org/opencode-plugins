{
  "name": "opencode-plugins",
  "private": true,
  "version": "0.0.0",
  "workspaces": ["packages/*", "libs/*", "apps/*", "tools/executors"],
  "scripts": {
    "bootstrap": "bun install",
    "build": "bunx nx run-many --target=build --all",
    "build:affected": "bunx nx affected --target=build",
    "test": "bunx nx run-many --target=test --all",
    "test:affected": "bunx nx affected --target=test",
    "lint": "bunx nx run-many --target=lint --all",
    "lint:affected": "bunx nx affected --target=lint",
    "lint:md": "bunx markdownlint-cli2 \"**/*.md\" \"#node_modules\" \"#**/node_modules\"",
    "format": "bunx nx run-many --target=format --all",
    "format:affected": "bunx nx affected --target=format",
    "format:check": "biome format .",
    "type-check": "bunx nx run-many --target=type-check --all",
    "type-check:affected": "bunx nx affected --target=type-check",
    "validate": "bun run format:check && bun run lint:md && bun run lint && bun run type-check && bun run test && bun run build",
    "validate:affected": "bun run format:check && bun run lint:md && bun run lint:affected && bun run type-check:affected && bun run test:affected && bun run build:affected",
    "generate:plugin": "nx g ./tools/generators:plugin",
    "check:repo-settings": "bunx nx build workflows && node dist/apps/workflows/scripts/check-repo-settings/index.js",
    "hooks:install": "bunx lefthook install",
    "hooks:uninstall": "bunx lefthook uninstall"
  },
  "devDependencies": {
    "@berenddeboer/nx-biome": "^1.0.2",
    "@biomejs/biome": "^2.3.13",
    "@nx/devkit": "^22.1.3",
    "@nx/esbuild": "22.1.3",
    "@nx/js": "22.1.3",
    "@nx/node": "^22.1.3",
    "@nx/plugin": "^22.1.3",
    "@octokit/rest": "^20.0.0",
    "@opencode-ai/plugin": "^1.0.133",
    "@swc-node/register": "^1.11.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "^1.15.3",
    "@swc/helpers": "~0.5.11",
    "@types/bun": "^1.3.6",
    "@types/node": "^24.10.1",
    "bun-types": "^1.3.3",
    "esbuild": "^0.19.2",
    "lefthook": "^2.0.8",
    "markdownlint-cli2": "^0.19.1",
    "nx": "^22.1.3",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "tsup": "^6.0.0",
    "typescript": "~5.9.2",
    "zod": "^4.1.13"
  },
  "dependencies": {}
}
