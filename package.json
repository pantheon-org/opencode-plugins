{
  "name": "opencode-plugins",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "bootstrap": "bun install",
    "build": "bunx nx run-many --target=build --all",
    "build:affected": "bunx nx affected --target=build",
    "test": "bunx nx run-many --target=test --all",
    "test:affected": "bunx nx affected --target=test",
    "lint": "bunx nx run-many --target=lint --all",
    "lint:affected": "bunx nx affected --target=lint",
    "lint:md": "bunx markdownlint-cli2 \"**/*.md\" \"#node_modules\" \"#**/node_modules\"",
    "format": "bunx nx run-many --target=format --all",
    "format:affected": "bunx nx affected --target=format",
    "format:check": "prettier --check .",
    "type-check": "bunx nx run-many --target=type-check --all",
    "typecheck:tests": "node ./scripts/typecheck-tests.js",
    "typecheck:tests:all": "node ./scripts/typecheck-tests.js",
    "type-check:affected": "bunx nx affected --target=type-check",
    "validate": "bun run format:check && bun run lint:md && bun run lint && bun run type-check && bun run test && bun run build",
    "validate:affected": "bun run format:check && bun run lint:md && bun run lint:affected && bun run type-check:affected && bun run test:affected && bun run build:affected",
    "generate:plugin": "nx g ./tools/generators:plugin",
    "hooks:install": "bunx lefthook install",
    "hooks:uninstall": "bunx lefthook uninstall"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@nx/devkit": "^22.1.3",
    "@nx/eslint": "^22.1.3",
    "@nx/eslint-plugin": "^22.1.3",
    "@nx/jest": "22.1.3",
    "@nx/js": "22.1.3",
    "@nx/node": "^22.1.3",
    "@nx/plugin": "^22.1.3",
    "@opencode-ai/plugin": "^1.0.133",
    "@swc-node/register": "^1.11.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "^1.15.3",
    "@swc/helpers": "~0.5.11",
    "@types/bun": "^1.3.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/semver": "^7.7.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "bun-types": "^1.3.3",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.4.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-tsdoc": "^0.5.0",
    "jest": "^30.0.2",
    "jest-environment-node": "^30.0.2",
    "jest-util": "^30.0.2",
    "jsonc-eslint-parser": "^2.1.0",
    "jsonc-parser": "3.0.0",
    "lefthook": "^2.0.8",
    "markdownlint-cli2": "^0.19.1",
    "nx": "^22.1.3",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "tsup": "^6.0.0",
    "typescript": "~5.9.2",
    "zod": "^4.1.13"
  },
  "dependencies": {}
}
