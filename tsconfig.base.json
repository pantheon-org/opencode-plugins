{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@pantheon-org/opencode-warcraft-notifications-plugin": [
        "packages/opencode-warcraft-notifications-plugin/src/index.ts"
      ],
      "@pantheon-org/opencode-agent-loader-plugin": [
        "packages/opencode-agent-loader-plugin/src/index.ts"
      ],
      "@pantheon-org/tools": ["tools/index.ts"],
      "@pantheon-org/opencode-snyk-plugin": [
        "packages/opencode-snyk-plugin/src/index.ts"
      ],
      "@pantheon-org/opencode-core": ["libs/opencode-core/src/index.ts"],
      "@libs/opencode-core": ["libs/opencode-core/src"],
      "@libs/opencode-core/*": ["libs/opencode-core/src/*"],
      "@pantheon-org/opencode-jira-plugin": [
        "packages/opencode-jira-plugin/src/index.ts"
      ],
      "@pantheon-org/opencode-gitlab-plugin": [
        "packages/opencode-gitlab-plugin/src/index.ts"
      ]
    }
  }
}
