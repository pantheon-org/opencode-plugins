{
  "name": "opencode-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/opencode-core/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/opencode-core",
        "main": "libs/opencode-core/src/index.ts",
        "tsConfig": "libs/opencode-core/tsconfig.lib.json",
        "assets": ["libs/opencode-core/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/opencode-core/jest.config.cts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["libs/opencode-core/**/*.ts"]
      }
    }
  }
}
