{
  "name": "opencode-core",
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/schemas/project-schema.json",
  "sourceRoot": "libs/opencode-core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/opencode-core/dist",
        "main": "libs/opencode-core/src/index.ts",
        "tsConfig": "libs/opencode-core/tsconfig.json",
        "assets": []
      }
    },
    "test": {
      "executor": "@nx/js:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/opencode-core/jest.config.js",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["libs/opencode-core/**/*.ts"]
      }
    }
  },
  "tags": ["lib", "opencode", "core", "utilities"]
}
