{
  "name": "@pantheon-org/opencode-warcraft-notifications-plugin",
  "version": "0.1.0",
  "description": "OpenCode plugin that plays Warcraft II sound notifications when your AI assistant goes idle",
  "keywords": ["opencode", "plugin", "typescript", "warcraft", "notifications", "sound", "idle"],
  "homepage": "https://github.com/pantheon-org/opencode-warcraft-notifications-plugin#readme",
  "bugs": {
    "url": "https://github.com/pantheon-org/opencode-warcraft-notifications-plugin/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pantheon-org/opencode-warcraft-notifications-plugin.git"
  },
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist/", "data/", "README.md", "LICENSE"],
  "scripts": {
    "test": "bun test src",
    "test:coverage": "bun test --coverage src/",
    "test:watch": "bun test --watch src/",
    "test:verbose": "bun test src/ --reporter tap",
    "type-check": "bun tsc --noEmit --project tsconfig.test.json",
    "lint": "biome lint .",
    "lint:md": "markdownlint-cli2",
    "lint:md:fix": "markdownlint-cli2 --fix",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "clean": "rm -rf dist/ .bun-cache/ coverage/",
    "build": "bunx tsup src/index.ts --format esm --dts --out-dir dist --clean",
    "dev": "bunx tsup src/index.ts --format esm --dts --out-dir dist --watch",
    "verify:package": "npm pack --dry-run",
    "prepublishOnly": "bun run build && bun test && bun run verify:package"
  },
  "dependencies": {
    "csstype": "^3.1.3",
    "undici-types": "^7.16.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@nx/js": "22.1.3",
    "@opencode-ai/plugin": "^1.0.133",
    "@swc/cli": "~0.6.0",
    "@swc/helpers": "~0.5.11",
    "@types/bun": "^1.3.4",
    "@types/node": "^24.10.1",
    "bun-types": "^1.3.3",
    "markdownlint-cli2": "^0.19.1",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "zod": "^4.1.13"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  }
}
