{
  "name": "opencode-warcraft-notification",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/opencode-warcraft-notification/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "bunx tsup src/index.ts --format esm,cjs --dts --out-dir dist"
          }
        ],
        "cwd": "packages/opencode-warcraft-notification",
        "parallel": false
      }
    },
    "pack": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "bunx npm pack --prefix packages/opencode-warcraft-notification"
          }
        ],
        "parallel": false
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "bunx eslint src --ext .ts"
          }
        ],
        "cwd": "packages/opencode-warcraft-notification",
        "parallel": false
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "bunx prettier --write src"
          }
        ],
        "cwd": "packages/opencode-warcraft-notification",
        "parallel": false
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "bunx tsc --noEmit"
          }
        ],
        "cwd": "packages/opencode-warcraft-notification",
        "parallel": false
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "echo \"No tests configured\""
          }
        ],
        "cwd": "packages/opencode-warcraft-notification",
        "parallel": false
      }
    }
  }
}
