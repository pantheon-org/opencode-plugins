{
  "name": "opencode-font",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/opencode-font/src",
  "projectType": "library",
  "tags": ["type:package", "scope:font"],
  "targets": {
    "check-mirror-exists": {
      "executor": "@pantheon-org/tools:check-mirror-exists"
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "bun run build"
          }
        ],
        "cwd": "packages/opencode-font",
        "parallel": false
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "bun run dev"
          }
        ],
        "cwd": "packages/opencode-font",
        "parallel": false
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "bun run test"
          }
        ],
        "cwd": "packages/opencode-font",
        "parallel": false
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "bun run test:coverage"
          }
        ],
        "cwd": "packages/opencode-font",
        "parallel": false
      }
    },
    "generate-fonts": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "bun run generate:fonts"
          }
        ],
        "cwd": "packages/opencode-font",
        "parallel": false
      }
    },
    "validate-fonts": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "bun run validate:fonts"
          }
        ],
        "cwd": "packages/opencode-font",
        "parallel": false
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome check --write .",
        "cwd": "packages/opencode-font"
      },
      "cache": true,
      "inputs": [
        "default",
        "{workspaceRoot}/biome.json",
        "{projectRoot}/biome.json"
      ]
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome format --write .",
        "cwd": "packages/opencode-font"
      },
      "cache": true,
      "inputs": [
        "default",
        "{workspaceRoot}/biome.json",
        "{projectRoot}/biome.json"
      ]
    },
    "validate:tsdoc": {
      "executor": "@pantheon-org/tools:validate-tsdoc",
      "options": {
        "projectRoot": "packages/opencode-font"
      },
      "cache": true
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "bun run typecheck"
          }
        ],
        "cwd": "packages/opencode-font",
        "parallel": false
      }
    }
  }
}
