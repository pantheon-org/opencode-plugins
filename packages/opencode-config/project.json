{
  "name": "opencode-config",
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/schemas/project-schema.json",
  "sourceRoot": "packages/opencode-config/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/opencode-config/dist",
        "main": "packages/opencode-config/src/index.ts",
        "tsConfig": "packages/opencode-config/tsconfig.json",
        "assets": []
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome check --write .",
        "cwd": "packages/opencode-config"
      },
      "cache": true,
      "inputs": ["default", "{workspaceRoot}/biome.json", "{projectRoot}/biome.json"]
    },
    "validate:tsdoc": {
      "executor": "@pantheon-org/tools:validate-tsdoc",
      "options": {
        "projectRoot": "packages/opencode-config"
      },
      "cache": true
    }
  },
  "tags": ["package", "opencode", "config", "utilities"]
}
