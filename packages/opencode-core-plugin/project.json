{
  "name": "opencode-core-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/opencode-core-plugin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "bunx tsup src/index.ts --format esm,cjs --dts --out-dir dist"
          }
        ],
        "cwd": "packages/opencode-core-plugin",
        "parallel": false
      }
    },
    "pack": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "bunx npm pack --prefix packages/opencode-core-plugin"
          }
        ],
        "parallel": false
      }
    },
    "check-mirror-exists": {
      "executor": "@pantheon-org/tools:check-mirror-exists"
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome check --write .",
        "cwd": "packages/opencode-core-plugin"
      },
      "cache": true,
      "inputs": [
        "default",
        "{workspaceRoot}/biome.json",
        "{projectRoot}/biome.json"
      ]
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome format --write .",
        "cwd": "packages/opencode-core-plugin"
      },
      "cache": true,
      "inputs": [
        "default",
        "{workspaceRoot}/biome.json",
        "{projectRoot}/biome.json"
      ]
    },
    "validate:tsdoc": {
      "executor": "@pantheon-org/tools:validate-tsdoc",
      "options": {
        "projectRoot": "packages/opencode-core-plugin"
      },
      "cache": true
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "bunx tsc --noEmit"
          }
        ],
        "cwd": "packages/opencode-core-plugin",
        "parallel": false
      }
    },
    "dev-proxy": {
      "executor": "@pantheon-org/tools:dev-proxy",
      "options": {
        "plugins": ["opencode-core-plugin"],
        "symlinkRoot": ".opencode/plugin",
        "apply": true
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "bun test"
          }
        ],
        "cwd": "packages/opencode-core-plugin",
        "parallel": false
      }
    },
    "validate:skills": {
      "executor": "@pantheon-org/tools:validate-skills",
      "options": {
        "skillsPath": "src/skills/index.ts"
      },
      "configurations": {
        "strict": {
          "strict": true
        }
      }
    },
    "validate:skill-md": {
      "executor": "@pantheon-org/tools:validate-skill-md",
      "options": {
        "pattern": "docs/skills/*.md"
      },
      "configurations": {
        "strict": {
          "strict": true
        }
      }
    }
  }
}
