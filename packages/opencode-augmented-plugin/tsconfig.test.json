    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": false,
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./types", "./node_modules", "./node_modules/@types"],
