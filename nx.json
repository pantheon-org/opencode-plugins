{
  "npmScope": "pantheon-org",
  "implicitDependencies": {},
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "test",
          "lint"
        ]
      }
    }
  },
  "generators": {
    "@nx/workspace": {
      "plugin": {
        "directory": "packages"
      }
    }
  },
  "workspaceLayout": {
    "appsDir": "packages",
    "libsDir": "packages"
  }
}